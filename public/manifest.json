{
  "manifest_version": 3,
  "name": "LinkedIn AI Reply",
  "version": "1.0",
  "description": "A Chrome extension that assists users in generating replies to LinkedIn messages.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": [
    {
      "src": "./src/ai-icon.svg",
      "sizes": "16x16",
      "type": "image/svg+xml"
    },
    {
      "src": "./src/ai-icon.svg",
      "sizes": "48x48",
      "type": "image/svg+xml"
    },
    {
      "src": "./src/ai-icon.svg",
      "sizes": "128x128",
      "type": "image/svg+xml"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}